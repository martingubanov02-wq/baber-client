<%- include('partials/layout', { title: 'Регистрация' }) %>
<section class="card small">
  <h2>Регистрация</h2>
  <% if (typeof closed !== 'undefined' && closed) { %>
    <div class="flash error">Регистрация отключена</div>
  <% } else { %>
  <form method="post" action="/register" autocomplete="off">
    <label>Ник</label>
    <input type="text" name="username" required minlength="3" maxlength="32" autocomplete="off" autocapitalize="off" autocorrect="off" spellcheck="false" />
    <label>Пароль</label>
    <input type="password" name="password" required minlength="4" maxlength="128" placeholder="Придумайте пароль" autocomplete="new-password" autocapitalize="off" autocorrect="off" spellcheck="false" />
    <button class="btn" type="submit">Создать аккаунт</button>
  </form>
  <% } %>
</section>
<%- include('partials/footer') %>
